<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form action="/update-user" method="post">
        <input type="text" hidden name="userId" value="<%= user[0].ID %>">
        <label for="">First Name</label>
        <input type="text" name="firstName" value="<%= user[0].firstName %>">
        <label for="">Last Name</label>
        <input type="text" name="lastName" value="<%= user[0].lastName %>">
        <label for="">Email</label>
        <input type="text" name="email" value="<%= user[0].email %>">
        <label for="">Address</label>
        <input type="text" name="address" value="<%= user[0].address %>">
        <button type="submit">Submit</button>
    </form>
</body>

</html>